<body>

<%- include("../../partials/navbar.ejs") %>

  <div class="container">
    <div class="card">
      <div class="card-header">
        <h2>Novo artigo</h2>
      </div>
      <div class="card-body">
        <form method="POST" action="/articles/save">
          <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo."><br/>
          <textarea name="body" id="article" class="form-control" placeholder="Escreva um novo artigo."></textarea><br/>
          <label>Categoria</label>
          <select name="category" class="form-control">
            <option value="#">Selecione uma categoria</option>
            <% categories.forEach(categories =>{ %>
              <option value="<%= categories.id %>"><%= categories.title %></option>
            <% }) %> 
          </select><br/>
          <button type="form" class="btn btn-primary">Cadastrar</button>
        </form>
      </div>
    </div>
  </div>

<script src="/tinymce/tinymce.min.js"></script>
<script>

  tinymce.init({
    selector: "#article",
    language: "pt_BR",
