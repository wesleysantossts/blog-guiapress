<%- include("partials/header.ejs") %> 
<%- include("partials/categorynavbar.ejs") %> 

<div class="p-4 p-md-5 mb-4 text-dark rounded bg-light">
  <div class="col-md-6 px-0">
    <h1 class="display-4 fst-italic"><%= category.title %></h1>
  </div><br/>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a style="text-decoration: none;" href="/">Home</a></li>
      <li class="breadcrumb-item"><a style="text-decoration: none" href="/admin/categories">Categorias</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= category.title %> </li>
    </ol>
  </nav>
</div>

<div class="container" style="display: grid; grid-template: auto auto / auto auto; grid-gap: 0px 15px; grid-auto-flow: row;">
  <% articles.forEach(article => { %>
    <div class="row mb-2">
      <div class="col-auto">
        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
          <div class="col p-4 d-flex flex-column position-static" style="width: 400px">
            <strong class="d-inline-block mb-2 text-primary"><%= category.title %> </strong>
            <h3 class="mb-0" style="max-width: 25ch; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><%= article.title %> </h3>
            <div class="mb-1 text-muted" style="max-width: 25ch; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><%= article.createdAt %> </div><br/>
            <a href="/<%= article.slug %> " class="btn btn-primary" style="position: absolute; bottom: 20px; width: 350px">Continuar lendo</a>
          </div>
          <div class="col-auto d-none d-lg-block">
            <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
          </div>
        </div>
      </div>
    </div>
  <% }) %> 
</div>

<script>
  
</script>

