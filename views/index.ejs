<div class="container">
  <section style="display: grid; grid-template-columns: auto auto;">
    <% articles.forEach((article)=>{ %>
      <div class="row mb-2">
        <div class="col-md-6" style="width: 80%">
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
              <strong class="d-inline-block mb-2 text-primary"><%= article.category.title %></strong>
              <h3 class="mb-0"><%= article.title %> </h3>
              <div class="mb-1 text-muted"><%= article.createdAt %> </div><br/>
              <a href="/<%= article.slug %> " class="btn btn-primary" style="position: absolute; bottom: 15px; width: 50%">Continuar lendo</a>
            </div>
            <div class="col-auto d-none d-lg-block">
              <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
            </div>
          </div>
        </div>
      </div>
    <% }) %> 
  </section>
  <div>
    <a class="btn btn-primary" href="/articles/2" style="float: right; margin-bottom: 10px">Next ></a> 
  </div>
</div>

